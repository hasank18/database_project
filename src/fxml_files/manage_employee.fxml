<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane fx:id="container" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.man_employee_controller">
    <children>
        <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <BorderPane prefHeight="12.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                    <left>
                        <Button mnemonicParsing="false" onAction="#addEmployee" text="add Employee" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </BorderPane.margin>
                        </Button>
                    </left>
                    <center>
                        <Button mnemonicParsing="false" onAction="#editEmployeeInfo" text="edit Employee info" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </BorderPane.margin>
                        </Button>
                    </center>
                    <right>
                        <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#deleteEmployee" text="delete Employee" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </BorderPane.margin>
                        </Button>
                    </right>
                </BorderPane>
            </top>
            <center>
                <TableView fx:id="table" editable="true" prefHeight="364.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" />
                    </BorderPane.margin>
                    <columns>
                        <TableColumn fx:id="username_col" editable="true" prefWidth="75.0" text="User Name" />
                        <TableColumn fx:id="pass_col" onEditCommit="#updatePasswordHandler" prefWidth="75.0" text="Password" />
                        <TableColumn fx:id="name_col" editable="true" onEditCommit="#updateNameHandler" prefWidth="75.0" text="name" />
                        <TableColumn fx:id="date_col" editable="true" onEditCommit="#updateDateHandler" prefWidth="75.0" text="birthdate" />
                        <TableColumn fx:id="address_col" editable="true" onEditCommit="#updateAddressHandler" prefWidth="75.0" text="address" />
                        <TableColumn fx:id="number_col" editable="true" onEditCommit="#updatePhoneHandler" prefWidth="112.0" text="Phone Number" />
                        <TableColumn fx:id="gender_col" editable="true" onEditCommit="#updateGenderHandler" prefWidth="75.0" text="gender" />
                        <TableColumn fx:id="salary_col" onEditCommit="#updateSalaryHandler" prefWidth="75.0" text="salary" />
                    </columns>
                </TableView>
            </center>
            <bottom>
                <Button fx:id="update" alignment="TOP_CENTER" mnemonicParsing="false" onAction="#update" text="Update" visible="false" BorderPane.alignment="CENTER" />
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
